<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center_horizontal"
    android:background="@color/white">

  <TextView
      android:id="@+id/ivCatalogo"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="32dp"
      android:text="CATÁLOGO DE MANZANAS"
      android:textColor="#F06A95"
      android:textSize="24sp"
      android:textStyle="bold" />

  <ImageView
      android:id="@+id/ivManzana"
      android:layout_width="94dp"
      android:layout_height="97dp"
      android:layout_marginTop="24dp"
      android:contentDescription="Manzana Normal"
      android:src="@drawable/manzana_normal" />

  <ImageView
      android:id="@+id/ivManzana"
      android:layout_width="102dp"
      android:layout_height="101dp"
      android:layout_marginTop="24dp"
      android:contentDescription="Manzana Skwinkles"
      android:src="@drawable/manzana_skwinkles" />

  <ImageView
      android:id="@+id/ivManzana"
      android:layout_width="107dp"
      android:layout_height="107dp"
      android:layout_marginTop="24dp"
      android:contentDescription="Manzana con Mango"
      android:src="@drawable/manzana_mango" />

  <ImageView
      android:id="@+id/ivManzana"
      android:layout_width="102dp"
      android:layout_height="103dp"
      android:layout_marginTop="24dp"
      android:contentDescription="Manzana con Picafresa"
      android:src="@drawable/manzana_picafresa" />

  <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/recyclerCatalogo"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_marginTop="24dp"
      android:layout_weight="1" />

  <Button
      android:id="@+id/btnPedido"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Realizar pedido por Instagram"
      android:textColor="@android:color/white"
      android:backgroundTint="#F06A95"
      android:textAllCaps="false"
      android:layout_marginTop="16dp"
      android:layout_marginBottom="16dp" />
</LinearLayout>
